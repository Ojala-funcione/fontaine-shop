datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
generator client {
  provider = "prisma-client-js"
}


model Category {
  id        String  @id @default(uuid())
  thumbnail String? @default("https://firebasestorage.googleapis.com/v0/b/fontaine-dev.appspot.com/o/logo-square.jpg?alt=media&token=f1b1b8d0-a08d-4f9c-9798-e4eb3b4a95d8")
  name      String  @db.VarChar(64)
  slug      String  @db.VarChar(64) @unique
  status    Int?
}

model Coupon {
  id    String @id @default(uuid())
  types Int?
}

model Order {
  id               String  @id @default(uuid())
  customer_id      Int?
  ammount          Int?
  shipping_address String? @db.VarChar(64)
  billing_address  String? @db.VarChar(64)
  order_email      String? @db.VarChar(64)
  order_date       String? @db.VarChar(32)
  order_status     Int?
}

model Product {
  id          String   @id @default(uuid())
  sku         String   @db.VarChar(64) @unique
  name        String   @db.VarChar(64)
  description String?  @db.VarChar(256)
  image       String?
  thumbnail   String?
  stock       Int?
  stock_min   Int?
  dimensions  Json?    @db.Json
  discount    Int?
  status      Int?
  variants    Boolean?
  price       Int
}

model Site_setting {
  id String @id @default(uuid())
}

model User {
  id               String   @id(map: "users_pkey") @default(uuid())
  email            String   @db.VarChar(64) @unique
  password         String   @db.VarChar(64)
  name             String   @db.VarChar(64)
  last_name        String   @db.VarChar(64)
  billing_address  String?  @db.VarChar(128)
  shipping_address String?  @db.VarChar(128)
  phone            Decimal? @db.Decimal(32, 0)
  role             Role     @default(COSTUMER)
  verified         Boolean
  photo_url        String?
  access_token     String?
  user_pool_id     String?
  user_name        String?  @db.VarChar(64)
  status           Int?
}

model Variant {
  id        String  @id @default(uuid())
  name      String? @db.VarChar(64)
  stock     Int?
  stock_min Int?
  sku       String? @db.VarChar(128)
}

enum Role {
  COSTUMER
  ADMIN
  SUPERADMIN
  SHOPMANAGER
  SHIPPINGMANAGER
}
